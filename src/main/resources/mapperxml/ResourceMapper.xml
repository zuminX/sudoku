<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sudoku.mapper.ResourceMapper">
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete
    from `resource`
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.sudoku.model.entity.Resource" useGeneratedKeys="true">
    insert into `resource` (url, nameZh)
    values (#{url,jdbcType=VARCHAR}, #{nameZh,jdbcType=VARCHAR})
  </insert>
  <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="com.sudoku.model.entity.Resource"
    useGeneratedKeys="true">
    insert into `resource`
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="url != null">
        url,
      </if>
      <if test="nameZh != null">
        nameZh,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="url != null">
        #{url,jdbcType=VARCHAR},
      </if>
      <if test="nameZh != null">
        #{nameZh,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  <resultMap id="BaseResultMap" type="com.sudoku.model.entity.Resource">
    <!--@Table `resource`-->
    <id column="id" jdbcType="INTEGER" property="id"/>
    <result column="url" jdbcType="VARCHAR" property="url"/>
    <result column="nameZh" jdbcType="VARCHAR" property="nameZh"/>
  </resultMap>
  <resultMap extends="BaseResultMap" id="ResourceWithRole" type="com.sudoku.model.entity.Resource">
    <collection ofType="com.sudoku.model.entity.Role" property="roles">
      <id column="rid" property="id"/>
      <result column="rname" property="name"/>
      <result column="rnameZh" property="nameZh"/>
    </collection>
  </resultMap>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from `resource`
    where id = #{id,jdbcType=INTEGER}
  </select>
  <select id="selectAllResourcesWithRole" resultMap="ResourceWithRole">
    select resource.*, r.`id`, r.`name` as rname, r.`nameZh` as rnameZh
    from resource
           inner join resource_role rr on resource.`id` = rr.rrid
           inner join role r on r.`id` = rr.rid
    order by resource.`id`
  </select>
  <sql id="Base_Column_List">
    id,
    url,
    nameZh
  </sql>
  <update id="updateByPrimaryKeySelective" parameterType="com.sudoku.model.entity.Resource">
    update `resource`
    <set>
      <if test="url != null">
        url = #{url,jdbcType=VARCHAR},
      </if>
      <if test="nameZh != null">
        nameZh = #{nameZh,jdbcType=VARCHAR},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
  <update id="updateByPrimaryKey" parameterType="com.sudoku.model.entity.Resource">
    update `resource`
    set url    = #{url,jdbcType=VARCHAR},
        nameZh = #{nameZh,jdbcType=VARCHAR}
    where id = #{id,jdbcType=INTEGER}
  </update>
</mapper>