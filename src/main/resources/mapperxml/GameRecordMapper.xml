    <result column="slid" jdbcType="INTEGER" property="slid"/>
    <result column="uid" jdbcType="INTEGER" property="uid"/>
  </resultMap>
  <resultMap id="GameRecordVOMap" type="com.sudoku.model.vo.GameRecordVO">
    <result column="sudoku_matrix" property="sudokuMatrix"/>
    <result column="sudoku_holes" property="sudokuHoles"/>
    <result column="start_time" property="startTime"/>
    <result column="end_time" property="endTime"/>
