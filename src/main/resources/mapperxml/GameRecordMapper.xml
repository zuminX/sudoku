      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>

  <update id="updateByPrimaryKey" parameterType="com.sudoku.model.entity.GameRecord">
    update game_record
    set sudoku_matrix = #{sudokuMatrix,jdbcType=CHAR},
        sudoku_holes  = #{sudokuHoles,jdbcType=CHAR},
        start_time    = #{startTime,jdbcType=TIMESTAMP},
        end_time      = #{endTime,jdbcType=TIMESTAMP},
        correct       = #{correct,jdbcType=BOOLEAN},
        slid          = #{slid,jdbcType=INTEGER},
        `uid`         = #{uid,jdbcType=INTEGER}
    where id = #{id,jdbcType=INTEGER}
  </update>

  <update id="updateEndTimeAndCorrectById">
    update game_record
    set end_time=#{updatedEndTime,jdbcType=TIMESTAMP},
        correct=#{updatedCorrect,jdbcType=BOOLEAN}
