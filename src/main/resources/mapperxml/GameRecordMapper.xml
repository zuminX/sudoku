<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sudoku.project.mapper.GameRecordMapper">
  <resultMap id="BaseResultMap" type="com.sudoku.project.model.entity.GameRecord">
    <!--@Table game_record-->
    <id column="id" jdbcType="INTEGER" property="id"/>
    <result column="sudoku_matrix" jdbcType="CHAR" property="sudokuMatrix"/>
    <result column="sudoku_holes" jdbcType="CHAR" property="sudokuHoles"/>
    <result column="start_time" jdbcType="TIMESTAMP" property="startTime"/>
    <result column="end_time" jdbcType="TIMESTAMP" property="endTime"/>
    <result column="correct" jdbcType="BOOLEAN" property="correct"/>
    <result column="sudoku_level_id" jdbcType="INTEGER" property="sudokuLevelId"/>
    <result column="user_id" jdbcType="INTEGER" property="userId"/>
  </resultMap>

  <resultMap id="GameRecordVOMap" type="com.sudoku.project.model.vo.GameRecordVO">
    <result column="sudoku_matrix" property="sudokuMatrix"/>
    <result column="sudoku_holes" property="sudokuHoles"/>
    <result column="start_time" property="startTime"/>
    <result column="end_time" property="endTime"/>
    <result column="correct" property="correct"/>
    <result column="name" property="sudokuLevelName"/>
  </resultMap>

  <sql id="Base_Column_List">
    id,
    sudoku_matrix,
    sudoku_holes,
    start_time,
    end_time,
    correct,
    sudoku_level_id,
    user_id
  </sql>

  <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="com.sudoku.project.model.entity.GameRecord"
    useGeneratedKeys="true">
    insert into game_record
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="sudokuMatrix != null">
        sudoku_matrix,
      </if>
      <if test="sudokuHoles != null">
        sudoku_holes,
      </if>
      <if test="startTime != null">
        start_time,
      </if>
      <if test="endTime != null">
        end_time,
      </if>
      <if test="correct != null">
        correct,
      </if>
      <if test="sudokuLevelId != null">
        sudoku_level_id,
      </if>
      <if test="userId != null">
        user_id,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="sudokuMatrix != null">
        #{sudokuMatrix,jdbcType=CHAR},
      </if>
      <if test="sudokuHoles != null">
        #{sudokuHoles,jdbcType=CHAR},
      </if>
      <if test="startTime != null">
        #{startTime,jdbcType=TIMESTAMP},
      </if>
      <if test="endTime != null">
        #{endTime,jdbcType=TIMESTAMP},
      </if>
      <if test="correct != null">
        #{correct,jdbcType=BOOLEAN},
      </if>
      <if test="sudokuLevelId != null">
        #{sudokuLevelId,jdbcType=INTEGER},
      </if>
      <if test="userId != null">
        #{userId,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>

  <select id="findByUidOrderByStartTimeDesc" resultMap="GameRecordVOMap">
    select gr.sudoku_matrix,
           gr.sudoku_holes,
           gr.start_time,
           gr.end_time,
           gr.correct,
           sl.name
    from game_record gr
           inner join sudoku_level sl on gr.sudoku_level_id = sl.id
    where user_id = #{userId,jdbcType=INTEGER}
    order by start_time desc
  </select>

  <update id="updateEndTimeAndCorrectById">
    update game_record
    set end_time = #{endTime,jdbcType=TIMESTAMP},
        correct  = #{correct,jdbcType=BOOLEAN}
    where id = #{id,jdbcType=INTEGER}
  </update>

  <select id="findFirstEndTimeOrderByEndTime" resultType="java.time.LocalDateTime">
    select end_time
    from game_record
    order by end_time
    limit 1
  </select>

  <select id="countCorrectTotalAndErrorTotalSudokuLevelIdByEndTimeBetween"
    resultType="com.sudoku.project.model.bo.StatisticsGameDataBO">
    select SUM(CASE correct WHEN 1 THEN 1 ELSE 0 END) as correct_total,
           SUM(CASE correct WHEN 0 THEN 1 ELSE 0 END) as error_total,
           sudoku_level_id
    from game_record
    where DATE(`end_time`) <![CDATA[>=]]> DATE(#{startDate,jdbcType=DATE})
      and DATE(`end_time`) <![CDATA[<]]> DATE(#{endDate,jdbcType=DATE})
    group by sudoku_level_id
  </select>
</mapper>