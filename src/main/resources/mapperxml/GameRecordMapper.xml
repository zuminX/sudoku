    <set>
      <if test="sudokuMatrix != null">
        sudoku_matrix = #{sudokuMatrix,jdbcType=CHAR},
      </if>
      <if test="sudokuHoles != null">
        sudoku_holes = #{sudokuHoles,jdbcType=CHAR},
