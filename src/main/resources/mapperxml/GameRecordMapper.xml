  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from game_record
    where id = #{id,jdbcType=INTEGER}
  </select>
  <select id="findByUidOrderByStartTimeDesc" resultMap="GameRecordVOMap">
    select gr.sudoku_matrix,
           gr.sudoku_holes,
           gr.start_time,
           gr.end_time,
           gr.correct,
           sl.name
    from game_record gr
           inner join sudoku_level sl on gr.slid = sl.id
    where `uid` = #{uid,jdbcType=INTEGER}
    order by start_time desc
  </select>
  <sql id="Base_Column_List">
